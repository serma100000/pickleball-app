# =============================================================================
# PICKLE PLAY API - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values.
# NEVER commit .env files with real credentials to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
PORT=3001
NODE_ENV=development

# -----------------------------------------------------------------------------
# DATABASE CONNECTION
# -----------------------------------------------------------------------------
# PostgreSQL connection string format:
# postgresql://[user]:[password]@[host]:[port]/[database]?[options]

# Local Development
DATABASE_URL=postgresql://postgres:password@localhost:5432/pickleball_db

# Cloud Provider Examples (uncomment as needed):
# Neon (Serverless PostgreSQL)
# DATABASE_URL=postgresql://[user]:[password]@[endpoint-id].us-east-2.aws.neon.tech/pickleball_db?sslmode=require

# Supabase
# DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Railway
# DATABASE_URL=postgresql://postgres:[password]@[container].railway.internal:5432/railway

# Connection Pool Settings
DB_POOL_SIZE=10
DB_IDLE_TIMEOUT=20
DB_CONNECT_TIMEOUT=10
DB_MAX_LIFETIME=3600

# -----------------------------------------------------------------------------
# AUTHENTICATION (Clerk)
# -----------------------------------------------------------------------------
CLERK_SECRET_KEY=sk_test_xxxxx
CLERK_PUBLISHABLE_KEY=pk_test_xxxxx

# Webhook secret for Clerk events (optional)
# CLERK_WEBHOOK_SECRET=whsec_xxxxx

# -----------------------------------------------------------------------------
# REDIS CACHE
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# Redis connection options (optional)
# REDIS_PASSWORD=
# REDIS_TLS=false

# -----------------------------------------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000

# For production with multiple origins:
# CORS_ORIGIN=https://pickle-play.com,https://app.pickle-play.com

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
ENABLE_RATE_LIMITING=true

# -----------------------------------------------------------------------------
# WEBSOCKET CONFIGURATION
# -----------------------------------------------------------------------------
WS_PORT=3002
ENABLE_WEBSOCKETS=true

# WebSocket ping interval (milliseconds)
WS_PING_INTERVAL=30000

# Maximum connections per IP
WS_MAX_CONNECTIONS_PER_IP=5

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
# Log levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES (Optional)
# -----------------------------------------------------------------------------

# DUPR Integration (for rating sync)
# DUPR_API_KEY=
# DUPR_API_URL=https://api.dupr.gg

# Email Service (for notifications)
# SENDGRID_API_KEY=
# EMAIL_FROM=noreply@pickle-play.com

# Push Notifications
# FIREBASE_PROJECT_ID=
# FIREBASE_PRIVATE_KEY=
# FIREBASE_CLIENT_EMAIL=

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
ENABLE_SWAGGER_DOCS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=false

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
# API key for internal services (if needed)
# INTERNAL_API_KEY=

# JWT secret for custom tokens (if not using Clerk exclusively)
# JWT_SECRET=

# Encryption key for sensitive data (32 bytes, base64 encoded)
# ENCRYPTION_KEY=
