{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "types": ["node", "vitest/globals"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": ".",
    "strict": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/db/seed.ts", "**/*.test.ts", "**/*.spec.ts"]
}
