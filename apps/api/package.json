{
  "name": "@pickle-play/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch -r dotenv/config src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist .turbo",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@clerk/backend": "^1.0.0",
    "@hono/node-server": "^1.11.0",
    "@hono/zod-validator": "^0.2.0",
    "@pickle-play/types": "workspace:*",
    "@pickle-play/utils": "workspace:*",
    "@pickle-play/validation": "workspace:*",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.30.0",
    "hono": "^4.2.0",
    "nanoid": "^5.0.0",
    "postgres": "^3.4.0",
    "redis": "^4.6.0",
    "socket.io": "^4.7.0",
    "stripe": "^20.3.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@pickle-play/config": "workspace:*",
    "@types/node": "^20.12.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.5.0",
    "dotenv": "^16.4.0",
    "drizzle-kit": "^0.21.0",
    "eslint": "^8.57.0",
    "tsup": "^8.0.0",
    "tsx": "^4.10.0",
    "typescript": "^5.4.0",
    "vitest": "^1.5.0"
  }
}
